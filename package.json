{
  "name": "pc-php-server",
  "author": {
    "name": "Paolo Cantarella"
  },
  "publisher": "Paolo Cantarella",
  "displayName": "PC PHP Server",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.104.0"
  },
  "icon": "assets/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pcphpserver.openInBrowser",
        "title": "Open File in Browser"
      },
      {
        "command": "pcphpserver.togglePhpServer",
        "title": "Toggle PHP Server"
      }
    ],
    "keybindings": [
      {
        "command": "pcphpserver.openInBrowser",
        "key": "ctrl+alt+b",
        "mac": "cmd+ctrl+b"
      }
    ],
    "submenus": [
      {
        "id": "pcphpserver.submenu",
        "label": "PC PHP Server"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pcphpserver.openInBrowser",
          "when": "editorTextFocus",
          "group": "pcphpserver"
        }
      ],
      "explorer/context": [
        {
          "command": "pcphpserver.openInBrowser",
          "group": "pcphpserver"
        }
      ],
      "pcphpserver.submenu": [
        {
          "command": "pcphpserver.openInBrowser"
        }
      ]
    },
    "configuration": {
      "title": "PC PHP Server Config",
      "properties": {
        "pcPhpServer.port": {
          "type": "number",
          "default": 9000,
          "minimum": 0,
          "maximum": 65535,
          "description": "The port number on which the PHP server will run"
        },
        "pcPhpServer.projectRoot": {
          "type": "string",
          "default": "/home/coder/project",
          "description": "The root directory to serve with the PHP server"
        },
        "pcPhpServer.showOpenInBrowserMessages": {
          "type": "boolean",
          "default": false,
          "description": "Show a message when a file is opened in browser"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcantar/pc-php-server.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}